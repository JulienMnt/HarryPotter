generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}
model user {
  id Int @id @default(autoincrement())
  pseudo String
  email String @unique
  password String
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}

model inventory {
  id Int @id @default(autoincrement())
  cards String
  idUser String @unique
  updated_at DateTime @updatedAt
}

model light{
  id Int @id @default(autoincrement())
  house String
  red Int
  green Int
  blue Int
}